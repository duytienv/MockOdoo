<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_datetime" model="ir.ui.view">
            <field name="name">datetime</field>
            <field name="model">res.lang</field>
            <field name="inherit_id" ref="base.res_lang_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='date_format']" position='after'>
                        <field name="month" />
                        <field name="year" />
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>